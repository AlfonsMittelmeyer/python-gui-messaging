Toplevel("DynTkInterGuiDesigner",title="DynTkInter GuiDesigner",link="guidesigner/modules.gui")

### CODE ===================================================

def top_level_closed(msg):
	if msg._widget.isDestroyed: send('SELECTION_CHANGED',this())
	else: setSelection(msg)

do_receive('TOPLEVEL_CLOSED',top_level_closed,wishMessage=True)

cdApp()
send("SELECTION_CHANGED")

